<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/cheeseImg"
                    android:layout_width="76dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="60dp"
                    app:srcCompat="@drawable/cheesedon"
                    tools:layout_editor_absoluteX="50dp"
                    tools:layout_editor_absoluteY="30dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/nameCheese"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="치즈돈까스"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/priceCheese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,000원"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    />

                <TextView
                    android:id="@+id/materialCheese"
                    android:layout_width="74dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-150dp"
                    android:layout_marginTop="40dp"
                    android:textSize="12dp"
                    android:text="(돼지고기(안심), 모짜렐라치즈)" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sirloinImg"
                    android:layout_width="76dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="60dp"
                    app:srcCompat="@drawable/sirloinpork"
                    tools:layout_editor_absoluteX="50dp"
                    tools:layout_editor_absoluteY="30dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/namesirloin"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="등심돈까스"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/pricesirloin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6,500원"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    />

                <TextView
                    android:id="@+id/materialsirloin"
                    android:layout_width="74dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-150dp"
                    android:layout_marginTop="40dp"
                    android:textSize="12dp"
                    android:text="(돼지고기(등심))" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tenderloinImg"
                    android:layout_width="76dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="60dp"
                    app:srcCompat="@drawable/tenderloinpork"
                    tools:layout_editor_absoluteX="50dp"
                    tools:layout_editor_absoluteY="30dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/nameTenderloin"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="안심돈까스"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/priceTenderloin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,000원"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    />

                <TextView
                    android:id="@+id/materialTenderloin"
                    android:layout_width="74dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-150dp"
                    android:layout_marginTop="40dp"
                    android:textSize="12dp"
                    android:text="(돼지고기(안심))" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>